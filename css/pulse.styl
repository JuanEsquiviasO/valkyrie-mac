azul = #1B1B1C
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
  font-family: 'fontapp';
  src:url('../fonts/icomoon.eot?ts0pbx');
  src:url('../fonts/icomoon.eot?ts0pbx#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?ts0pbx') format('truetype'),
    url('../fonts/icomoon.woff?ts0pbx') format('woff'),
    url('../fonts/icomoon.svg?ts0pbx#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

a
  color  naranja

body
  background #E8E8E8
  color gris_oscuro
  font-family Arial
  font-size 16px
  transition font-size 1s

footer
  background #444
  color rgba(white,0.5)
  padding 1em 0
  text-align center
  width 100%

  h3
    font-size 14px
    font-weight normal

    strong
      display block

    .powered
      &:before
      &:after
        content " - "
form
  padding 0.8em
  display none

  label
    display inline-block
    width 60px

header
  background gris_oscuro
  box-shadow 0 5px 0 rgba(0,0,0,0.2)
  color white
  overflow hidden
  padding 0.5em
  position relative
  z-index 2

  .logo
    border-right 1px solid azul
    float left
    width 60px

    img
      width 52px

  .titular
    margin 0 60px 0 70px

    .filtro
      color white
      font-size 14px
      font-style italic
      font-weight bold
      text-decoration none

    .publicar
      background #9E9E9E
      color white
      float right
      font-style italic
      margin -5px 1em 0 0
      padding 0.2em 0.5em
      text-decoration none
      text-shadow 1px 1px 0px black

      &:before
        content "\e902"
        display inline-block
        font-family fontapp
        margin 0 3px 0 0

    .sizer
      text-decoration none

    .titulo
      font-size 18px
      font-weight normal
      margin 0
      padding 0

  .usuario
    position absolute
    right 10px
    top 10px

    .avatar
      margin 0 1.1em 0 0
      position relative
      z-index 2

      img
        border-radius 50%
        width 50px

    .flecha
      background #9E9E9E
      color white
      display block
      padding 2px
      position absolute
      right 0
      top 15px
      text-align right
      text-decoration none
      width 50%
      z-index 0

      &:after
        content "\e900"
        display block
        font-family fontapp
        msrgin 1px 0 0 1px
        // font-size 1em
        text-shadow 1px 1px 0px black
        // vertical-align bottom

nav
  background azul
  border-left 15px solid #9E9E9E
  position relative

  &:before
    border-bottom 20px solid transparent
    border-left 7px solid #9E9E9E
    border-top 20px solid transparent
    content ""
    left 0px
    position absolute
    top 0

  .menu
    text-align center
    // height 40px
    line-height 40px
    margin 0
    padding 0
    overflow-x auto
    white-space nowrap

    li
      display inline-block

      a
        color white
        display block
        margin 0 0.5em
        padding 0.2em
        text-decoration none

.posts
  padding 0.5em

  .post
    background white
    border-radius 0 0 0.5em 0.5em
    box-shadow 2px 2px 10px rgba(black, 0.5)
    color gris_texto
    margin-bottom 0.5em

    .acciones
      border-top 3px solid azul
      padding 0.5em
      overflow hidden

      .datos
        float right

        .comentarios
          background gris_oscuro
          border-radius 0.2em
          color white
          margin 0 1em 0 0
          padding 2px 5px
          text-decoration none

        .star
          text-decoration  none

          &:after
            font-family fontapp
            color #009688
            content: "\e903"

      .votos
        float left

        .down
        .up
          text-decoration none
          &:before
            font-family fontapp
            font-size 1.5em
            content "\e900"
            vertical-align bottom
        .down
          color red

        .up
          color green
          &:before
            font-family fontapp
            font-size 1.5em
            content "\e901"
            vertical-align bottom

    .description
      color gris_texto

      .detalles
        height 160px
        margin-left 130px

        .author
          margin 0.5em 0 2em 0

        .fecha
          float right
          margin 0 1em 0 0

        .tag
          background azul
          border-radius 0.5em
          color white
          padding 0.2em 0.5em
          text-decoration none

        .titulo
          color gris_oscuro
          font-size 1.1em
          font-style italic
          margin 0
          padding 0.5em 0.5em 0 0

      .imagen
        float left

        img
          height 160px
          vertical-align top
          width 120px

@media screen and (min-width: 768px)

  header
    .titular
      .publicar
        font-size 1.1em
        padding-left 3em
        position relative

        &:before
          left 0
          font-size 2.5em
          position absolute
          top -10px

  .posts
    .post
      display inline-block !important
      width 48%
      vertical-align top
      &:nth-child(odd)
        margin-right 2%
